
<% include ./partials/header %>
<div class="ui main text container segment">
 <div class="ui huge header" >Edit Blog </div>
 <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
   <div class="field">
     <label>Title</label>
     <input type="text" name="blog[title]" value="<%= blog.title %>">
   </div>
   <div class="field">
     <label>Image</label>
     <input type="text" name="blog[image]" value="<%= blog.image %>">
   </div>
   <div class="field">
     <label>Content</label>
     <textarea name="blog[content]"> "<%= blog.content %>"</textarea>
   </div>
   <input type="submit" class="ui red big button">
 </form>

</div>
<% include ./partials/footer %>